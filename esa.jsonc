{
    "name": "esa-edge-persona",
    // 告诉 ESA，边缘函数的入口在哪里
    "entry": "./functions/server.js", 
    // 前端构建命令（根据你的 React 项目调整，通常是 vite build 或 npm run build）
    "buildCommand": "npm run build",
    // 依赖安装命令
    "installCommand": "npm install",
    // 静态资源目录（Vite 默认通常是 dist）
    "assets": {
        "directory": "./dist",
        // 单页应用 (SPA) 必须配置这个，防止刷新 404
        "notFoundStrategy": "singlePageApplication" [cite: 341]
    }
}
